{
  "name": "nostr-fetch-all",
  "version": "0.1.0",
  "description": "A utility library that allows JS/TS apps to effortlessly fetch all past events from Nostr relays",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": "ssh://git@github.com/jiftechnify/nostr-fetch-all.git",
  "author": "jiftechnify <jiftech.stlfy@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc",
    "lint": "run-p tsc lint:*",
    "lint:format": "prettier --check --loglevel warn src/**/*.ts",
    "lint:js": "eslint --max-warnings 0 src/",
    "fix": "run-s fix:*",
    "fix:format": "prettier --write --loglevel warn src/**/*.ts",
    "fix:js": "eslint --fix src/",
    "build": "npm-run-all tsc -p build:*",
    "build:modules": "node build.js",
    "build:types": "tsc -p tsconfig.build.json",
    "start": "node -r esbuild-register",
    "to-npub": "node -r esbuild-register src/to_npub.ts"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^1.0.1",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.14.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.4",
    "esbuild": "^0.17.5",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "fs-extra": "^11.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "websocket-polyfill": "^0.0.3"
  },
  "volta": {
    "node": "18.14.2"
  }
}
